@page
@model IndexModel
@{
    ViewData["Title"] = "Currency Conventer";
}

<div style="background-color:#ffbd80">
    <header class="text-center">
    <h1 class="display-4">Razor Currency Conventer</h1>
    <h2> By Milena</h2>
    </header>
 <br /><br />
    <form method="post" class="mx-auto" style="width:200px">
        <p class="col-sm-6">
            <label for="pounds"> British Pound: </label>
             <input type="number"required="true" step="0.01" placeholder="£" asp-for="Value">
        </p>
        <p class="col-sm-10" style="background-color:#ffe5cc">
            <label for="euro"> Euro: </label>

        <output type="number" step="0.01"> @Model.Result €</output>
           
        </p>
         <p class="col-sm-2">
            <button type="submit" class="btn btn-primary">
                Convert
                </button>
         </p>
         <p class="col-sm-12">
             @ViewData["Message"]
         </p>
      
    </form>

  
</div>
